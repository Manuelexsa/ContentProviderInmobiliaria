<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kronos.contentpinmobiliaria.FragmentoDInmueble"
    android:background="#ffffe7b3">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="right|top"
        android:weightSum="1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTituloDetalle"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:layout_weight="2.87" />

        <ImageView
            android:layout_width="109dp"
            android:layout_height="120dp"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:layout_marginBottom="50dp"
            android:src="@drawable/img" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/anterior"
                android:id="@+id/btAnterior"
                android:layout_gravity="bottom|left"
                android:layout_margin="5dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/siguiente"
                android:id="@+id/btSiguiente"
                android:layout_gravity="bottom|right"
                android:layout_margin="5dp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
